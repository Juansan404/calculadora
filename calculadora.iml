import java.util.Scanner;

public class Ejemplo5 {
    public static void main(String[] args) {

        int numero = 0;
        while (numero != 5){
            System.out.println("Dime un número");
            double num1 = new Scanner(System.in).nextDouble();
            System.out.println("Dime otro número");
            double num2 = new Scanner(System.in).nextDouble();
            System.out.println("""
                    Que quieres hacer con los dos números?
                    Marque el número de la derecha para realizar la operación
                    1) sumar (1)
                    2) restar (2)
                    3) comparaión (3)
                    4) par/impar (4)
                    5) salir (5)
                    """);
            numero = new Scanner(System.in).nextInt();
            switch (numero) {
                case 1 -> {
                    System.out.println("La suma es: " + (num1 + num2));
                }
                case 2 -> {
                    System.out.println("La resta es: " + (num1 - num2));
                }
                case 3 -> {
                    if(num1 == num2 ){
                        System.out.println("Ambos numeros son = iguales" );
                    } else if (num1 != num2) {
                        System.out.println("Ambos numeros son = distintos");
                    } else if (num1 > num2) {
                        System.out.println("El primer numero es mayor");
                    } else {
                        System.out.println("El segundo numero es mayor");
                    }
                }
                case 4 -> {
                    
                }
                case 5 -> {
                    System.out.println("Programa terminado");
                }
                default -> System.out.println("Numero incorrecto");
            }
        }
    }
}
